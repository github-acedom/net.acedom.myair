{
  "title": {
    "en": "Set aircon mode"
  },
  "titleFormatted": {
    "en": "Set aircon mode to [[fan_mode]]"
  },
  "highlight": true,
  "args": [
    {
      "name": "device",
      "type": "device",
      "filter": "driver_id=myair_control"
    },
    {
      "name": "fan_mode",
      "type": "dropdown",
      "values": [
        {"id": "cool", "label": {"en": "Cool"}},
        {"id": "heat", "label": {"en": "Heat"}},
        {"id": "fan", "label": {"en": "Fan"}},
        {"id": "dry", "label": {"en": "Dry"}}
      ]
    }
  ]
}
